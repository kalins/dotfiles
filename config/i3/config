bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec rofi -show run -theme solarized # -lines 3 -eh 2 -width 100 -padding 800 -opacity "85" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "System San Francisco Display 18"

# print screen
bindsym --release Print exec scrot -u '%Y-%m-%d_%s_$wx$h.png' -e 'mv $f $$HOME/Screenshots/'
bindsym --release Shift+Print exec scrot -s '%Y-%m-%d_%s_$wx$h.png' -e 'mv $f $$HOME/Screenshots/'

